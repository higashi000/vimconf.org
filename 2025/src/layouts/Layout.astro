---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";

const { lang = 'ja' } = Astro.props;
---
<!DOCTYPE html>
<html lang={lang}>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="VimConf2025">
		<meta name="author" content="VimConf2025">

    <GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Cardo:ital,wght@0,400;0,700;1,400&display=swap">
    </GoogleFontsOptimizer>

		<title>VimConf 2025</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: "Helvetica Neue",
    Arial,
    "Hiragino Kaku Gothic ProN",
    "Hiragino Sans",
    Meiryo,
    sans-serif;
  line-height: 2.4;
  color: #333;
}
</style>
